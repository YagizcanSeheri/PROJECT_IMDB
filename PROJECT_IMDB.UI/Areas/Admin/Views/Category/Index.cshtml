@model IEnumerable<PROJECT_IMDB.Entity.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Category Name</th>
            <th>Create Date</th>
            <th>Update Date</th>
            <th>Delete Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.CreateDate</td>
                <td>@item.UpdateDate</td>
                <td>@item.DeleteDate</td>
                <td>@item.Status</td>
                <td>
                    <a href="/Admin/Category/Update/@item.Id" class="btn btn-warning">Update</a>
                    <a href="/Admin/Category/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
