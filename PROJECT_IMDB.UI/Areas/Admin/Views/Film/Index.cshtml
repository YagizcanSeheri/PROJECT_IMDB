@model IEnumerable<PROJECT_IMDB.Entity.Entities.Film>
@{ ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }

<div class="row mt-2">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4>List of Films</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Content</th>
                                <th>Video</th>
                                <th>Image</th>
                                <th>Details</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Content</td>

                    <td><iframe width="560" height="315" src="@item.VideoUrl" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></td>
                    <td>
                        <img src="~/media/film/" width="100" height="100" />
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete </a>
                    </td>
                </tr>}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Create" class="btn btn-block btn-dark">Create a New One</a>
            </div>
        </div>
    </div>
</div>




